@using Garage_2._0.Common
@using Garage_2._0.Models.Entities

<form asp-action="Search">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="regNo" placeholder="Search on reg No" />
        <div class="input-group-append">
            <select class="form-control" name="vehicleType" asp-items="@Html.GetEnumSelectList<VehicleTypes>()">
                <option selected="selected" value="">Please select</option>
            </select>
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary"><i class="fa fa-search">Search</i></button>
        </div>
    </div>
</form>

